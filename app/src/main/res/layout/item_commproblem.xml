<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/s_list_item_silver"
    android:padding="15dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用常见问题"
            android:textColor="@color/black"
            android:textSize="@dimen/ts_x_large" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_question_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用财富锦囊需要费用吗"
            android:textSize="@dimen/ts_medium" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_solid" />

</RelativeLayout>