<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/tv_btprogress_label"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="总预算"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <View
            android:id="@+id/v_btprogress_bg"
            android:layout_width="280dp"
            android:layout_height="@dimen/space"
            android:background="@color/line_gray"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_btprogress_label" />
        <View
            android:id="@+id/v_btprogress"
            android:layout_width="280dp"
            android:layout_height="10dp"
            android:background="@color/line_gray"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_btprogress_label" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/tv_btprogress_value"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="2000"
            android:textSize="@dimen/ts_medium"
           />
        <TextView
            android:id="@+id/tv_lablevalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额"
            android:textSize="@dimen/ts_medium"
            android:layout_toRightOf="@+id/tv_btprogress_value"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/tv_btvalue_surp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500.00"
            android:textSize="@dimen/ts_medium"
            android:layout_toRightOf="@+id/tv_lablevalue" />
    </RelativeLayout>
</LinearLayout>