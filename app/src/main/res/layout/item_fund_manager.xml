<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimens_x1dp"
        android:background="@drawable/bg_company">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/manager_item_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="呵呵"
                android:textSize="@dimen/dimens_x1.8sp"
                android:textColor="@color/black"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/manager_item_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016年至今"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dimens_x1sp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dimens_x1dp"
                android:layout_marginLeft="@dimen/dimens_x1dp"
                android:layout_marginTop="@dimen/dimens_x1dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任期回报"
                    android:textSize="@dimen/dimens_x1.4sp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/manager_item_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-36.23%"
                    android:layout_marginTop="@dimen/dimens_x1dp"
                    android:textColor="@color/gree_xx"
                    android:textSize="@dimen/dimens_x1.4sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dimens_x1dp"
                android:layout_marginLeft="@dimen/dimens_x1dp"
                android:layout_marginTop="@dimen/dimens_x1dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同类平均"
                    android:textSize="@dimen/dimens_x1.4sp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/manager_item_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-36.23%"
                    android:layout_marginTop="@dimen/dimens_x1dp"
                    android:textColor="@color/gree_xx"
                    android:textSize="@dimen/dimens_x1.4sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dimens_x1dp"
                android:layout_marginLeft="@dimen/dimens_x1dp"
                android:layout_marginTop="@dimen/dimens_x1dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="超越同类"
                    android:textSize="@dimen/dimens_x1.4sp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/manager_item_text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-36.23%"
                    android:layout_marginTop="@dimen/dimens_x1dp"
                    android:textColor="@color/gree_xx"
                    android:textSize="@dimen/dimens_x1.4sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>