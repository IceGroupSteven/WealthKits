<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:padding="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_tilte"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_fund_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="南方收益宝"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_x1.8sp" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-03-09至今" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/dimens_x1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_tilte"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期间涨幅"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_x1.6sp" />

                <TextView
                    android:id="@+id/tv_increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimens_x1dp"
                    android:text="+1.8%"
                    android:textColor="@color/c_xcjt_ggjt"
                    android:textSize="@dimen/dimens_x1.6sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同类平均"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_x1.6sp" />

                <TextView
                    android:id="@+id/tv_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimens_x1dp"
                    android:text="+1.8%"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens_x1.6sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="超越同类"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_x1.6sp" />

                <TextView
                    android:id="@+id/tv_transcend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimens_x1dp"
                    android:text="+1.8%"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens_x1.6sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_gray"
        android:background="@color/line_gray" />
</LinearLayout>