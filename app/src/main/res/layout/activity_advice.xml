<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/silver"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/red">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:src="@drawable/ic_goback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="建议反馈"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens_x2sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space"
            android:padding="@dimen/space">

            <Spinner
                android:id="@+id/s_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/myattexpandadpter_type"
                android:prompt="@string/spin_prompt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/space"
                android:src="@drawable/ic_arrow_down" />
        </RelativeLayout>

        <EditText
            android:background="@drawable/myattexpandadpter_type"
            android:id="@+id/et_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space"
            android:gravity="top"
            android:hint="请输入您的宝贵意见或建议"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:padding="@dimen/space_x2" />

        <Button
            android:onClick="submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space"
            android:background="@drawable/s_rounded_rectangle_red"
            android:padding="@dimen/space"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_x2sp" />
    </LinearLayout>

</ScrollView>
