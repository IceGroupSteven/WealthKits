<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:src="@drawable/ic_goback"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改手机号"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_x2sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/space_x2.5"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingTop="@dimen/space_x1.5"
            android:paddingBottom="@dimen/space_x1.5"
            android:paddingLeft="@dimen/space"
            android:paddingRight="@dimen/space">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新手机号"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_x1.8sp" />

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_x1.6dp"
                android:background="@null"
                android:hint="请输入新手机号"
                android:inputType="phone"
                android:textSize="@dimen/dimens_x1.8sp" />
        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/space"
            android:layout_marginRight="@dimen/space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_gray"
            android:background="@color/line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dimens_x1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_x1.8sp" />

            <EditText
                android:id="@+id/et_message_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_x1.6dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:singleLine="true"
                android:inputType="phone"
                android:textSize="@dimen/dimens_x1.8sp" />

            <Button
                android:id="@+id/b_message_code"
                android:layout_marginLeft="@dimen/dimens_x0.8dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:padding="@dimen/space_x0.5"
                android:background="@drawable/s_rounded_rectangle_red"
                android:textSize="@dimen/dimens_x1.8sp"/>
        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/space"
            android:layout_marginRight="@dimen/space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_gray"
            android:background="@color/line_gray" />

        <Button
            android:id="@+id/b_confirm"
            android:layout_marginTop="@dimen/dimens_x4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textSize="@dimen/space_x2"
            android:textColor="@color/white"
            android:background="@drawable/s_rounded_rectangle_red"
            />
    </LinearLayout>


</LinearLayout>
