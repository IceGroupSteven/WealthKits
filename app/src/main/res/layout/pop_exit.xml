<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/fillet_pop"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="是否退出当前账号？"
        android:textColor="@color/black"
        android:textSize="@dimen/dimens_x1.8sp"
        android:gravity="center"
        android:padding="@dimen/dimens_x4dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_my_fund__"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pop_notrigst"
            android:textSize="@dimen/dimens_x1.8sp"
            android:layout_width="0dp"
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            />

        <View
            android:layout_width="@dimen/line_gray"
            android:layout_height="match_parent"
            android:background="@color/line_gray"
            />

        <Button
            android:background="#00000000"
            android:id="@+id/pop_mastrigst"
            android:textSize="@dimen/dimens_x1.8sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确认退出"
            />
    </LinearLayout>
</LinearLayout>