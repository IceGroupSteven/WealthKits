<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:orientation="horizontal"
        android:padding="@dimen/space_x1.5">

        <TextView
            android:id="@+id/tv_contentname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="数米柜台"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_x2sp" />

        <TextView
            android:id="@+id/tv_contenttype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="暂未开通"
            android:textSize="@dimen/dimens_x1.8sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_gray"
        android:background="@color/line_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_contentManget_off"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_contentManger_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="数米基金，让你的理财更简单！"
                android:textSize="@dimen/dimens_x1.6sp" />

            <TextView
                android:id="@+id/tv_countManger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="马上开通"
                android:textColor="@color/red"
                android:textSize="@dimen/dimens_x1.6sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_contentManger_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/ll_Manger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/space_x1.5"
                    android:layout_weight="1"
                    android:text="账户管理"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_x1.8sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <View
                android:layout_marginLeft="@dimen/space_x1.5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_gray"
                android:background="@color/line_gray"/>

            <LinearLayout
                android:id="@+id/ll_bankmang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/space_x1.5"
                    android:text="银行卡管理"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_x1.8sp" />

                <TextView
                    android:id="@+id/tv_bankNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/space"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="4张"
                    android:textSize="@dimen/dimens_x1.8sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_arrow_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_gray"
                android:background="@color/line_gray"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>