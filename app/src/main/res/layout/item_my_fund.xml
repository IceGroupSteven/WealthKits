<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:padding="@dimen/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/linear_zhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/space" >

            <TextView
                android:id="@+id/tv_fund_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工银货币"
                android:maxLength="6"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_x1.6sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_fund_name"
                android:orientation="horizontal"
                android:paddingTop="@dimen/space_x1.5">

                <ImageView
                    android:id="@+id/iv_fund_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_tf_logo"/>

                <TextView
                    android:id="@+id/tv_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="天风证券"
                    android:textSize="@dimen/dimens_x1.2sp"
                    android:layout_marginLeft="@dimen/dimens_x0.5dp"
                    android:textColor="@color/gray_x0.5"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="资产"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_marginTop="@dimen/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_fund_name"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_asstes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textColor="@color/c_jrbx_fz"
                    android:textSize="@dimen/dimens_x1.8sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="元"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="昨日收益"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_marginTop="@dimen/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_fund_name">

                <TextView
                    android:id="@+id/tv_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens_x1.8sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="元"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view_line"
            android:layout_marginLeft="@dimen/space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_gray"
            android:background="@color/line_gray"/>

        <RelativeLayout
            android:id="@+id/rl_my_fund"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimens_x0.5dp">
                <ImageView
                    android:id="@+id/image_my_fund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fund_redemption"
                    android:layout_marginLeft="@dimen/dimens_x0.5dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/my_fund_text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赎回"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimens_x1dp"/>

                <TextView
                    android:id="@+id/my_fund_text8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000份"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimens_x1dp"/>

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right_p"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimens_x1dp"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_gray"
        android:background="@color/line_gray"/>
</LinearLayout>