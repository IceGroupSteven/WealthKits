<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_x2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_record_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/transparent"
                android:src="@drawable/ic_subscribe" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_x1.5dp"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_record_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="申购"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_x1.6sp" />

                <TextView
                    android:id="@+id/tv_record_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space"
                    android:text="确认失败"
                    android:textSize="@dimen/dimens_x1.2sp"
                    android:paddingTop="@dimen/dimens_x0.2dp"
                    android:paddingBottom="@dimen/dimens_x0.2dp"
                    android:paddingLeft="@dimen/dimens_x0.8dp"
                    android:paddingRight="@dimen/dimens_x0.8dp"
                    android:textColor="@color/red"
                    android:background="@drawable/bg_defeated"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
           android:paddingLeft="@dimen/space"
            android:maxEms="6"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:id="@+id/tv_fund_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南方收益宝"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_x1.6sp" />

        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00"
                android:textColor="@color/red"
                android:textSize="@dimen/dimens_x1.8dp" />

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/black"
                android:textSize="@dimen/dimens_x1.2sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/tv_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_date"
            android:layout_marginTop="@dimen/space"
            android:text="2015-12-1 19:30"
            android:textColor="@color/black"
            android:textSize="@dimen/dimens_x1.2sp" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="@dimen/space_x2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_gray"
        android:background="@color/line_gray"/>
</LinearLayout>