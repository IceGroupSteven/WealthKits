<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:src="@drawable/ic_goback"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="投资风险评测"
            android:textColor="@color/white"
            android:textSize="@dimen/dimens_x2sp"/>
    </RelativeLayout>
    <TextView
        android:background="@color/gray_x0.8"
        android:padding="@dimen/dimens_x1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/StyleEvaluation_title"
        android:textSize="@dimen/dimens_x1.6sp"
        />

    <TextView
        android:textSize="@dimen/dimens_x1.8sp"
        android:layout_width="match_parent"
        android:padding="@dimen/dimens_x1dp"
        android:text="获取数据中..."
        android:background="@color/gray_x0.8"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:id="@+id/tv_evaStyle_title"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ll_notNetwork"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_above="@+id/tv_notNetwork"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_failed"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY">
        </ImageView>

        <TextView
            android:id="@+id/tv_notNetwork"
            android:layout_marginTop="@dimen/dimens_x2dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimens_x1.6sp"
            android:text="加载失败，请点击重试！"/>
    </RelativeLayout>
    <ListView
        android:layout_margin="@dimen/dimens_x1dp"
        android:id="@+id/lv_evaStyle"
        android:layout_width="match_parent"
        android:divider="@null"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>
</LinearLayout>
